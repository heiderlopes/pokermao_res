<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/permission_mewtwo">

    <ImageView
            android:alpha="0.9"
            android:layout_width="0dp"
            android:layout_height="120dp" app:srcCompat="@drawable/logo_pokemon"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="64dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="VER TODOS POKÃ‰MONS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPokemonList"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btPokedex"
            app:layout_constraintBottom_toTopOf="@+id/btClose"
            app:layout_constraintEnd_toEndOf="@+id/btPokedex" app:layout_constraintStart_toStartOf="@+id/btPokedex"/>
    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="SAIR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btClose"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btPokemonList"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="@+id/btPokemonList" app:layout_constraintStart_toStartOf="@+id/btPokemonList"/>
    <Button
            style="@style/custom_button"
            android:textColor="#673AB7"
            android:text="POKEDEX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btPokedex"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btPokemonList" app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:gravity="center"
            android:textColor="#FFF"
            android:text="DESENVOLVIDO POR HEIDER LOPES\nPara fins educacionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            app:layout_constraintGuide_percent="0.27"
            android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>